<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:layout_width="400dp"
    android:layout_height="190dp">

    <RelativeLayout
        android:id="@+id/reorder_relative_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Quantity"
            android:textSize="25dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:id="@+id/reorder_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_cancel"
            android:background="@android:color/transparent"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/reorder_relative_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reorder_relative_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/reorder_remove_btn"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_remove_black_24dp"
                android:background="@color/colorPrimary"
                android:onClick="onQntRemovePressed"/>

            <Button
                android:id="@+id/reorder_quantity_btn"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:text="1"
                android:background="#04A394"/>

            <ImageButton
                android:id="@+id/reorder_add_btn"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:src="@drawable/ic_add_black_24dp"
                android:background="@color/colorPrimary"
                android:onClick="onQntAddPressed"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/reorder_relative_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/reorder_add_to_cart_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#C14242"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:text="Add To Cart"
            android:textColor="@android:color/white"/>

    </RelativeLayout>

</RelativeLayout>
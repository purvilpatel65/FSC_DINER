<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/add_restaurant_dialog">

    <TextView
        style="@style/TextHighlight"
        android:layout_gravity="center"
        android:id="@+id/addRestaurantLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Add Restaurant"
        android:textColor="#000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/dialog_restaurant_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/white_square_text_border"
        android:fontFamily="@font/open_sans_bold"
        android:hint="Restaurant Name"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp" />

    <TextView
        android:id="@+id/imageNamePopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/open_sans_bold"
        android:gravity="center"
        android:paddingStart="5dp"
        android:text="Image Status: None Selected"
        android:textSize="18sp" />


    <Button
        android:id="@+id/addImageButtonDialog"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="@drawable/change_password_button_border"
        android:fontFamily="@font/open_sans_bold"
        android:text="Add Image"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/saveButtonDialog"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/change_password_button_border"
        android:fontFamily="@font/open_sans_bold"
        android:text="Save"
        android:textColor="#FFF" />

    <Button
        android:layout_gravity="center"
        android:id="@+id/cancelButtonDialog"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/saveButtonDialog"
        android:background="@drawable/clear_cart_button"
        android:fontFamily="@font/open_sans_bold"
        android:text="Cancel"
        android:textColor="#FFF" />




</LinearLayout>
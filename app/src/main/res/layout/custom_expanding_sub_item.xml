<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:textSize="18sp"
        android:text="Wheat Bread"
        android:gravity="center_vertical|left"/>

    <TextView
        android:id="@+id/extra_price_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/sub_title"
        android:layout_centerVertical="true"
        android:textSize="15sp"
        android:text="($ 0.50)"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical|left" />

    <TextView
        android:id="@+id/selected_type_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub_title"
        android:textSize="10sp"
        android:text="preselected"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical|left"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/edit_sub_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:srcCompat="@drawable/ic_edit"/>

    <ImageView
        android:id="@+id/remove_sub_item"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toStartOf="@id/edit_sub_items"
        android:layout_toLeftOf="@id/edit_sub_items"
        android:padding="12dp"
        app:srcCompat="@drawable/ic_delete"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home_fragment"
    android:fillViewport="true">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/textGrid"
                android:text="FSC DINER"
                android:textSize="34sp"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <GridLayout
            android:id="@+id/mainGrid"
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"

            >

            <!-- Row 1 -->

            <!-- Column 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/burger_studio_card_view"
                android:layout_width="@dimen/card_view_width"
                android:layout_height="@dimen/card_view_height"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin='16dp'
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                android:layout_weight="1"
                android:clickable="true"
                android:tag="@string/restaurant_1_name"
                android:onClick="onClickMenuCardViews"
                >

                    <ImageView
                        android:src="@drawable/burger_studio"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:text="@string/restaurant_1_name"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/card_view_text_size"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

            </androidx.cardview.widget.CardView>

            <!-- Column 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/card_view_width"
                android:layout_height="@dimen/card_view_height"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin='16dp'
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                android:layout_weight="1"
                >

                <ImageView
                    android:src="@drawable/burger_studio"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:text="Burger Studio"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/card_view_text_size"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </androidx.cardview.widget.CardView>


            <!-- Row 2 -->

            <!-- Column 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/card_view_width"
                android:layout_height="@dimen/card_view_height"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin='16dp'
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                android:layout_weight="1"
                >

                <ImageView
                    android:src="@drawable/burger_studio"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:text="Burger Studio"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/card_view_text_size"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </androidx.cardview.widget.CardView>

            <!-- Column 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/card_view_width"
                android:layout_height="@dimen/card_view_height"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin='16dp'
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                android:layout_weight="1"
                >

                <ImageView
                    android:src="@drawable/burger_studio"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:text="Burger Studio"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/card_view_text_size"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </androidx.cardview.widget.CardView>

            <!-- Row 3 -->

            <!-- Column 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/card_view_width"
                android:layout_height="@dimen/card_view_height"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin='16dp'
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                android:layout_weight="1"
                >

                <ImageView
                    android:src="@drawable/burger_studio"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:text="Burger Studio"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/card_view_text_size"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </androidx.cardview.widget.CardView>

            <!-- Column 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/card_view_width"
                android:layout_height="@dimen/card_view_height"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin='16dp'
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                android:layout_weight="1"
                >

                <ImageView
                    android:src="@drawable/burger_studio"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:text="Burger Studio"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/card_view_text_size"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </androidx.cardview.widget.CardView>




        </GridLayout>

    </LinearLayout>
</ScrollView>
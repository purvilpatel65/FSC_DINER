<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <androidx.cardview.widget.CardView
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@drawable/white_square_text_border"
            android:id="@+id/customer_history_relativelayout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/customer_history_relativelayout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/customer_history_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cheese Burger"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/customer_history_ingredients_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredients:"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/customer_history_item_name"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/customer_history_ingredients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredients"
                    android:layout_below="@+id/customer_history_ingredients_label"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/customer_history_restaurant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Burger Studio"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/customer_history_restaurant_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restaurant: "
                    android:layout_toLeftOf="@+id/customer_history_restaurant_name"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/customer_history_order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02/05/2020"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_below="@+id/customer_history_restaurant_name"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/customer_history_oder_date_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Date: "
                    android:layout_below="@+id/customer_history_restaurant_name"
                    android:layout_toLeftOf="@+id/customer_history_order_date"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp" />


            </RelativeLayout>
           <LinearLayout
               android:background="@drawable/white_square_text_border"
               android:padding="2dp"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:layout_marginTop="5dp"
               android:layout_below="@+id/customer_history_relativelayout_2"
               android:orientation="horizontal">

               <Button
                   android:id="@+id/customer_history_rate_button"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:text="Rate"
                   android:layout_weight="1"
                   android:background="@color/colorPrimary"/>
               <Button
                   android:id="@+id/customer_history_reorder_button"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:text="Reorder"
                   android:layout_weight="1"
                   android:background="#04A394"/>
               <Button
                   android:id="@+id/customer_history_remove_button"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:text="Remove"
                   android:layout_weight="1"
                   android:background="@color/colorPrimary"/>

           </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>